<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.elex.chatservice.danmu.ui.widget.DanmakuView
        android:id="@+id/sv_danmaku"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:id="@+id/danmu_input_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chuzheng_frame02"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/danmu_checkbox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"/>

        <EditText
            android:id="@+id/danmu_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:autoText="true"
            android:background="@drawable/text_field_bg2"
            android:completionThreshold="1"
            android:ems="10"
            android:imeOptions="actionSend"
            android:inputType="textMultiLine"
            android:maxLength="500"
            android:maxLines="1"
            android:text=""
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#4f4f4f"
            android:textColorHint="#939292"
            android:textSize="14sp" />

        <Button
            android:id="@+id/sendDanmuBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/btn_chat_send"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#F3F3F3"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/media_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/rotate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/rotate" />

        <Button
            android:id="@+id/btn_hide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hide_danmaku" />

        <Button
            android:id="@+id/btn_show"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/show_danmaku" />

        <Button
            android:id="@+id/btn_pause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pause_danmaku" />

        <Button
            android:id="@+id/btn_resume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/resume_danmaku" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/send_danmaku" />

        <Button
            android:id="@+id/btn_send_image_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/send_danmaku_image_text" />

        <Button
            android:id="@+id/btn_send_danmakus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/send_danmakus" />
    </LinearLayout>

</LinearLayout>